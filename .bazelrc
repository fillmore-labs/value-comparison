build --java_language_version=17
build --java_runtime_version=remotejdk_17
build --tool_java_runtime_version=remotejdk_17
build --enable_runfiles

coverage --instrumentation_filter "^//src/main/[^/]+/com/fillmore_labs[/:]"

build:ci --noshow_progress
build:ci --output_filter=^//
test:ci --test_output=errors
coverage:ci --test_summary=terse
coverage:ci --combined_report=lcov

try-import %workspace%/user.bazelrc

# https://github.com/bazelbuild/rules_kotlin/issues/562
build --worker_extra_flag='KotlinCompile=--wrapper_script_flag=--jvm_flags=--add-opens=jdk.jdeps/com.sun.tools.jdeps=ALL-UNNAMED'
